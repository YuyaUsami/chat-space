= form_for @group do |f|
  .chat-group-form__field
    .chat-group-form__field--left
      = f.label 'グループ名', class: 'chat-group-form__label', for: 'chat_group_name'
    .chat-group-form__field--right
      = f.text_field :name, class: 'chat-group-form__input', placeholder: 'グループ名を入力してください'
  .chat-group-form__field
    .chat-group-form__field--left
      = f.label 'チャットメンバー', class: 'chat-group-form__label', for: 'chat_group_チャットメンバー'
    .chat-group-form__field--right
      = collection_check_boxes :group, :user_ids, User.all, :id, :name
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
    .chat-group-form__field--right
      = f.submit 'Save', class: 'chat-group-form__action-btn'
